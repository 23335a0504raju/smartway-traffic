<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="40" guiShape="passenger"/>
    <vType id="ambulance" accel="3.0" decel="4.5" sigma="0.5" length="6" minGap="2.5" maxSpeed="60" guiShape="emergency" color="red">
        <param key="has.bluelight.device" value="true"/>
    </vType>

    <!-- Define Traffic Flows -->
    <flow id="flow_NS" type="car" begin="0" end="3600" number="500" from="E0" to="E2"/>
    <flow id="flow_SN" type="car" begin="0" end="3600" number="400" from="E2" to="E0"/>
    <flow id="flow_WE" type="car" begin="0" end="3600" number="300" from="E3" to="E1"/>
    <flow id="flow_EW" type="car" begin="0" end="3600" number="350" from="E1" to="E3"/>

    <!-- Emergency Vehicles (Sparse Injection) -->
    <!-- These will have IDs like 'amb_0', 'amb_1' etc -->
    <flow id="amb" type="ambulance" begin="50" end="3600" probability="0.01" from="E0" to="E2"/>
</routes>
